{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [],
		"indentWidth": 2,
		"indentStyle": "space",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingComma": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"indentWidth": 2,
			"indentStyle": "space",
			"lineWidth": 80,
			"quoteProperties": "asNeeded"
		}
	}
}
